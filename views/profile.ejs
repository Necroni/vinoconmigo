<%- include('partials/header') -%>
<div class="container">
    <div>
        <div>
            <div>
                <p><strong>User Name</strong>: <%= user.userName %></p>
                <p><strong>Email</strong>: <%= user.email %></p>
                <a href="/logout">Logout</a>
            </div>
            <div>
                <h2>Start a new tasting</h2>
                <form action="/post/createTasting" enctype="multipart/form-data" method="POST">
                <div>
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title">
                </div>
                <div>
                    <label for="caption">Caption</label>
                    <textarea class="form-control" id="caption" name="caption"></textarea>
                </div>
                <div>
                    <label for="imgUpload">Image</label>
                    <input type="file" id="imageUpload" name="file">
                </div>
                <button type="submit" value="Upload">Submit</button>
                </form>
            </div>
        </div>
        
        <div>
            <ul>
                <% for(let i = 0; i < tastings.length; i++) {%>
                <li>
                    <a href="/post/<%= tastings[i]._id%>">
                        <img src="<%= tastings[i].image%>">
                    </a>
                </li>
                <% } %>
            </ul>
            <div>
                <a href="/feed">Return to Feed</a>
            </div>  
        </div>  
    </div>
</div>

<%- include('partials/footer') -%>